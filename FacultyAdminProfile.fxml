<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.limkokwingacademicreporting.FacultyAdminProfileController">
    <left>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #101820; -fx-padding: 20;">
            <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.5, 0, 0);" />
            <Label fx:id="nameLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 16px;"/>
            <Button text="Edit Profile" style="-fx-background-color: #F2AA4C; -fx-text-fill: #101820; -fx-border-radius: 5; -fx-font-size: 14px;"/>
            <Label text="Profile" style="-fx-text-fill: #FFFFFF; -fx-font-size: 18px; -fx-padding-top: 20px;"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_LEFT" spacing="20" style="-fx-background-color: #1C1B1B; -fx-padding: 20;">
            <Label text="Profile Settings" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px;"/>
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Profile Details" style="-fx-text-fill: #F2AA4C; -fx-font-size: 18px;"/>

                <HBox spacing="20">
                    <Label text="Name:" style="-fx-text-fill: #B2B2B2; -fx-font-size: 14px;"/>
                    <Label fx:id="nameDetailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="20">
                    <Label text="Username:" style="-fx-text-fill: #B2B2B2; -fx-font-size: 14px;"/>
                    <Label fx:id="usernameDetailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="20">
                    <Label text="Date of Birth:" style="-fx-text-fill: #B2B2B2; -fx-font-size: 14px;"/>
                    <Label fx:id="dobDetailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="20">
                    <Label text="Email:" style="-fx-text-fill: #B2B2B2; -fx-font-size: 14px;"/>
                    <Label fx:id="emailDetailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                </HBox>

                <HBox spacing="20">
                    <Label text="Phone:" style="-fx-text-fill: #B2B2B2; -fx-font-size: 14px;"/>
                    <Label fx:id="phoneDetailLabel" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                </HBox>

                <!-- Back Button -->
                <Button fx:id="backButton" text="Back" onAction="#handleBack" style="-fx-background-color: #F2AA4C; -fx-text-fill: #101820; -fx-border-radius: 5; -fx-font-size: 14px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
