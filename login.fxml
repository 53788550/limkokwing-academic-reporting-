<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.limkokwingacademicreporting.LoginController">

    <!-- Rectangle for the semi-transparent black background -->
    <Rectangle width="800" height="600" fill="black" opacity="0.4"/>

    <!-- VBox for the login UI -->
    <VBox spacing="15" alignment="CENTER" styleClass="login-container"
          style="-fx-background-image: url('BACKGROUND.jpg'); -fx-background-size: cover;">

        <!-- Title Label for the Login Interface -->
        <Label text="Limkokwing University Login"
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: 'Arial Black';"/>

        <!-- Buttons for Login Options -->
        <Button text="Faculty Admin Login" fx:id="facultyAdminButton" styleClass="login-button" onAction="#handleFacultyAdminLogin"/>
        <Button text="Lecturer Login" fx:id="lecturerButton" styleClass="login-button" onAction="#handleLecturerLogin"/>
        <Button text="Principal Lecturer Login" onAction="#handlePrincipalLecturerLogin" styleClass="login-button"/>

    </VBox>
</StackPane>
